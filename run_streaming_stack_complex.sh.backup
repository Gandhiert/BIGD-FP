        fi
        
        if ! curl -s http://localhost:8080 > /dev/null; then
            print_warning "âš ï¸ Spark Master health check failed"
        fi
        
        LAST_HEALTH_CHECK=$CURRENT_TIME
        print_status "âœ… Health check completed"
    fi
done 