# Setup signal handler untuk graceful shutdown
cleanup() {
    echo ""
    print_status "ğŸ›‘ Shutting down Complete Streaming Stack..."
    
    # Kill background processes
    if [ ! -z "$PRODUCER_PID" ]; then
        kill $PRODUCER_PID 2>/dev/null
        print_status "ğŸ“¡ Stopped Kafka Producer"
    fi
    
    if [ ! -z "$CONSUMER_PID" ]; then
        kill $CONSUMER_PID 2>/dev/null
        print_status "ğŸ“¡ Stopped Kafka Consumer"
    fi
    
    if [ ! -z "$ORCHESTRATOR_PID" ]; then
        kill $ORCHESTRATOR_PID 2>/dev/null
        print_status "ğŸ“Š Stopped Data Orchestrator"
    fi
    
    if [ ! -z "$API_PID" ]; then
        kill $API_PID 2>/dev/null
        print_status "ğŸ”§ Stopped Analytics API"
    fi
    
    if [ ! -z "$DASHBOARD_PID" ]; then
        kill $DASHBOARD_PID 2>/dev/null
        print_status "ğŸ“Š Stopped Dashboard"
    fi
    
    # Stop Docker containers
    docker-compose down -v
    print_status "ğŸ—„ï¸ Stopped all infrastructure services"
    
    print_status "âœ… All services stopped successfully"
    exit 0
}

# Trap signals untuk cleanup
trap cleanup INT TERM

# Keep main process running dan monitor health
echo "ğŸ”„ Complete Streaming Stack is running. Monitoring system health..."
